{
  "name": "the-canonry",
  "version": "2.0.0",
  "description": "Procedural world history generation framework",
  "private": true,
  "license": "Polyform-Noncommercial-1.0.0",
  "author": "Tsonu",
  "type": "module",
  "packageManager": "pnpm@10.30.2",
  "engines": {
    "node": ">=22"
  },
  "devEngines": {
    "packageManager": {
      "name": "pnpm",
      "version": ">=10",
      "onFail": "error"
    }
  },
  "scripts": {
    "build": "turbo run build",
    "conduit": "pnpm --filter @canonry/dsl-v2 run build && pnpm run conduit:to-canon && pnpm run conduit:lint",
    "conduit:reg": "node scripts/conduit.js --registry",
    "conduit:lint": "node scripts/conduit.js --dir apps/canonry/webui/public/default-project/conduit/canon --lint",
    "conduit:to-canon": "node scripts/conduit.js --dir apps/canonry/webui/public/default-project --to canon --out-dir apps/canonry/webui/public/default-project/conduit/canon",
    "conduit:to-json": "node scripts/conduit.js --dir apps/canonry/webui/public/default-project/conduit/canon --to json --out-dir apps/canonry/webui/public/default-project/conduit/json",
    "dev": "turbo run build --filter=@canonry/world-schema --filter=@canonry/dsl --filter=@canonry/dsl-v2 --filter=name-forge --filter=@lore-weave/core && pnpm exec concurrently -n proxy,canonry,name-forge,cosmographer,coherence,lore-weave,illuminator,archivist,chronicler -c white,blue,yellow,magenta,cyan,green,red,gray,white \"node scripts/dev-proxy.js\" \"cd apps/canonry/webui && pnpm run dev\" \"cd apps/name-forge/webui && pnpm run dev\" \"cd apps/cosmographer/webui && pnpm run dev\" \"cd apps/coherence-engine/webui && pnpm run dev\" \"cd apps/lore-weave/webui && pnpm run dev\" \"cd apps/illuminator/webui && pnpm run dev\" \"cd apps/archivist/webui && pnpm run dev\" \"cd apps/chronicler/webui && pnpm run dev\"",
    "validate": "node scripts/validate-schemas.cjs",
    "validate:verbose": "node scripts/validate-schemas.cjs --verbose",
    "lint": "eslint . && stylelint \"apps/**/webui/src/**/*.css\" \"packages/shared-components/src/**/*.css\"",
    "lint:fix": "eslint . --fix && stylelint \"apps/**/webui/src/**/*.css\" \"packages/shared-components/src/**/*.css\" --fix",
    "lint:css": "stylelint \"apps/**/webui/src/**/*.css\" \"packages/shared-components/src/**/*.css\"",
    "lint:css:fix": "stylelint \"apps/**/webui/src/**/*.css\" \"packages/shared-components/src/**/*.css\" --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "turbo run test",
    "install:canonry": "pnpm install",
    "deploy:canonry": "bash infrastructure/terraform/deploy.sh",
    "deploy:viewer": "bash infrastructure/terraform-viewer/deploy.sh",
    "deploy:all": "pnpm run deploy:canonry && pnpm run deploy:viewer"
  },
  "keywords": [
    "procedural-generation",
    "world-building",
    "simulation",
    "visualization",
    "graph",
    "lore"
  ],
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "ajv": "^8.17.1",
    "baseline-browser-mapping": "^2.9.19",
    "concurrently": "^9.2.1",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-perf": "^3.3.3",
    "eslint-plugin-react-refresh": "^0.5.0",
    "eslint-plugin-sonarjs": "^3.0.7",
    "globals": "^17.3.0",
    "http-proxy": "^1.18.1",
    "prettier": "^3.8.1",
    "stylelint": "^16.26.1",
    "stylelint-config-standard": "^39.0.1",
    "turbo": "^2.5.0",
    "typescript-eslint": "^8.55.0"
  },
  "dependencies": {
    "@turf/turf": "^7.3.1",
    "prop-types": "^15.8.1",
    "simple-statistics": "^7.8.8"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild",
      "sharp"
    ]
  }
}
