{
  "name": "penguin-tales",
  "version": "2.0.0",
  "description": "Procedural world history generation framework",
  "private": true,
  "license": "Polyform-Noncommercial-1.0.0",
  "author": "Tsonu",
  "type": "module",
  "workspaces": [
    "apps/lore-weave",
    "apps/name-forge",
    "apps/lore-weave/webui",
    "apps/canonry/webui",
    "apps/chronicler/webui",
    "apps/cosmographer/webui",
    "apps/coherence-engine/webui",
    "apps/illuminator/webui",
    "apps/archivist/webui",
    "apps/viewer/webui",
    "packages/world-schema",
    "packages/canonry-dsl",
    "packages/canonry-dsl-v2",
    "packages/shared-components",
    "packages/image-store",
    "packages/narrative-store"
  ],
  "scripts": {
    "build": "npm run -ws --if-present build",
    "build:deps": "npm run -w @canonry/world-schema --if-present build && npm run -w @canonry/dsl --if-present build && npm run -w @canonry/dsl-v2 --if-present build && npm run -w name-forge --if-present build && npm run -w @lore-weave/core --if-present build",
    "conduit": "npm run -w @canonry/dsl-v2 --if-present build && npm run conduit:to-canon && npm run conduit:lint",
    "conduit:reg": "node scripts/conduit.js --registry",
    "conduit:lint": "node scripts/conduit.js --dir apps/canonry/webui/public/default-project/conduit/canon --lint",
    "conduit:to-canon": "node scripts/conduit.js --dir apps/canonry/webui/public/default-project --to canon --out-dir apps/canonry/webui/public/default-project/conduit/canon",
    "conduit:to-json": "node scripts/conduit.js --dir apps/canonry/webui/public/default-project/conduit/canon --to json --out-dir apps/canonry/webui/public/default-project/conduit/json",
    "dev": "npm run build:deps && npx concurrently -n proxy,canonry,name-forge,cosmographer,coherence,lore-weave,illuminator,archivist,chronicler -c white,blue,yellow,magenta,cyan,green,red,gray,white \"node scripts/dev-proxy.js\" \"cd apps/canonry/webui && npm run dev\" \"cd apps/name-forge/webui && npm run dev\" \"cd apps/cosmographer/webui && npm run dev\" \"cd apps/coherence-engine/webui && npm run dev\" \"cd apps/lore-weave/webui && npm run dev\" \"cd apps/illuminator/webui && npm run dev\" \"cd apps/archivist/webui && npm run dev\" \"cd apps/chronicler/webui && npm run dev\"",
    "validate": "node scripts/validate-schemas.cjs",
    "validate:verbose": "node scripts/validate-schemas.cjs --verbose",
    "lint:perf": "eslint -c eslint.perf.config.js \"apps/**/webui/src/**/*.{js,jsx,ts,tsx}\" \"packages/shared-components/src/**/*.{js,jsx,ts,tsx}\"",
    "lint:style": "stylelint \"apps/**/webui/src/**/*.css\" \"packages/shared-components/src/**/*.css\"",
    "install:canonry": "npm install -ws --include-workspace-root",
    "deploy:canonry": "bash infrastructure/terraform/deploy.sh",
    "deploy:viewer": "bash infrastructure/terraform-viewer/deploy.sh",
    "deploy:all": "npm run deploy:canonry && npm run deploy:viewer"
  },
  "keywords": [
    "procedural-generation",
    "world-building",
    "simulation",
    "visualization",
    "graph",
    "lore"
  ],
  "devDependencies": {
    "ajv": "^8.17.1",
    "baseline-browser-mapping": "^2.9.19",
    "concurrently": "^9.2.1",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-perfectionist": "^4.15.1",
    "eslint-plugin-promise": "^7.2.1",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-perf": "^3.3.3",
    "eslint-plugin-security": "^3.0.1",
    "eslint-plugin-sonarjs": "^3.0.5",
    "eslint-plugin-unicorn": "^62.0.0",
    "http-proxy": "^1.18.1",
    "stylelint": "^16.26.1",
    "stylelint-config-standard": "^39.0.1"
  },
  "dependencies": {
    "@turf/turf": "^7.3.1",
    "simple-statistics": "^7.8.8"
  }
}
