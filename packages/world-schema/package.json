{
  "name": "@canonry/world-schema",
  "version": "1.0.0",
  "description": "Shared types for The Canonry world-building suite - no runtime dependencies",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf dist",
    "prepublishOnly": "pnpm run build"
  },
  "devDependencies": {
    "typescript": "~5.9.3"
  },
  "keywords": [
    "world-building",
    "procedural-generation",
    "types",
    "schema"
  ],
  "license": "MIT"
}
