{
  "name": "@penguin-tales/viewer",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "vite --port 5008",
    "clean": "rm -rf dist",
    "build": "npm run clean && vite build",
    "postbuild": "npm run optimize-images && npm run chunk-bundle && npm run precompute-pages",
    "optimize-images": "node ./scripts/optimize-images.mjs --input dist/bundles/default/images --output dist/bundles/default/images --bundle-dir dist/bundles/default --delete-originals",
    "chunk-bundle": "node ./scripts/chunk-viewer-bundle.mjs --input dist/bundles/default/bundle.json --output dist/bundles/default",
    "precompute-pages": "tsx ./scripts/precompute-page-index.mts",
    "preview": "vite preview",
    "lint": "eslint ."
  },
  "dependencies": {
    "fuse.js": "^7.1.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "zustand": "^5.0.2",
    "@penguin-tales/image-store": "workspace:*",
    "@penguin-tales/narrative-store": "workspace:*",
    "@penguin-tales/world-store": "workspace:*"
  },
  "devDependencies": {
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@aws-sdk/client-s3": "^3.760.0",
    "@vitejs/plugin-react": "^5.1.1",
    "sharp": "^0.34.5",
    "tsx": "^4.20.0",
    "vite": "^7.2.4"
  }
}
