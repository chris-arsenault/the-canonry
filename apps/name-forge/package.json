{
  "name": "name-forge",
  "version": "0.1.0",
  "description": "Domain-aware procedural name generation system",
  "type": "module",
  "main": "dist/lib/index.js",
  "types": "dist/lib/index.d.ts",
  "bin": {
    "namegen": "dist/server/cli.js"
  },
  "scripts": {
    "cli": "tsx server/cli.ts",
    "generate": "tsx server/cli-generate.ts",
    "api": "tsx server/api-server.ts",
    "ui": "concurrently \"npm run api\" \"cd webui && npm run dev\" --names \"api,ui\" --prefix-colors \"blue,magenta\"",
    "ui:static": "cd webui && npm run static",
    "ui:serve": "cd webui && npm run serve",
    "reset:test": "rm -rf data/test && cp -r data/seed data/test && echo 'âœ… Reset test meta-domain from seed'",
    "build": "rm -rf dist && tsc",
    "build:fast": "tsc",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage"
  },
  "keywords": [
    "procedural-generation",
    "name-generation",
    "worldbuilding"
  ],
  "author": "",
  "license": "PolyForm-Noncommercial-1.0.0",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.70.1",
    "commander": "^12.1.0",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "piscina": "^5.1.4",
    "seedrandom": "^3.0.5",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.5",
    "@types/node": "^22.19.1",
    "@types/seedrandom": "^3.0.8",
    "@vitest/coverage-v8": "^4.0.13",
    "@vitest/ui": "^4.0.13",
    "concurrently": "^9.2.1",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "vitest": "^4.0.13"
  }
}
