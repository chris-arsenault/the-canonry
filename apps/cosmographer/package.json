{
  "name": "cosmographer",
  "version": "0.1.0",
  "description": "Semantic plane hierarchy generator for world structure mapping",
  "type": "module",
  "main": "dist/lib/index.js",
  "types": "dist/lib/index.d.ts",
  "scripts": {
    "cli": "tsx cli/index.ts",
    "generate": "tsx cli/index.ts generate",
    "build": "rm -rf dist && tsc",
    "build:fast": "tsc",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "keywords": [
    "procedural-generation",
    "worldbuilding",
    "plane-hierarchy",
    "semantic-analysis"
  ],
  "author": "",
  "license": "PolyForm-Noncommercial-1.0.0",
  "dependencies": {
    "commander": "^12.1.0",
    "yaml": "^2.7.0"
  },
  "devDependencies": {
    "@types/node": "^22.19.1",
    "@vitest/coverage-v8": "^4.0.13",
    "tsx": "^4.19.2",
    "typescript": "~5.9.3",
    "vitest": "^4.0.13"
  }
}
